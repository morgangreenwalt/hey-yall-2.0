<head>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/css/materialize.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js"></script>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	{{!-- <link rel="stylesheet" type="text/css" href="style.css"> --}}
        <link rel="stylesheet" type="text/css" href="assets/css/style.css">
</head>

{{> navbar}}

	<div class="container">
		{{!-- <a id="join" class="waves-effect waves-light btn" href="">Join</a> --}}
		<div class="row">
			<div class="col m3">
				<div class="card">
					<div class="card-content">
                        {{#each meetup}} 
                            <p>{{this.eventName}}<p>
                            <p>{{this.date}}<p>
                            <p>{{this.totalAttendees}}<p>   
                            <button class="btn btn-site btn-sm" type="submit"><a style="color: inherit; text-decoration: none;">Join</a></button>
                        {{/each}} 
					</div>
				</div>
			
				<div class="card">
					<div class="card-content black-text">
						<span class="card-title">Members</span>
                         {{#each members}} 
						<img class="center" src=""+image"">
                            <p{{this.name}}<p>   
                         {{/each}} 
					</div>
				</div>

			</div>

			<div class="col m9">
                 {{#each eventSuggestions}} 
                <div class="row">
                    <div class="card horizontal">
                    <div class="card-stacked">
                        <div class="card-content flex">
                        <p>{{this.title}}</p>
                        <p>{{this.venue}}</p>
                        <p>Up Votes: {{this.upVote}}</p>
                        <p>Down Votes: {{this.downVote}}</p>
                        <a id="info" class="waves-effect waves-light btn" href="">More Info</a>
                        </div>
                    </div>
                    <div class="card-action flex">
                        <a href="suggestions/like/{{this.id}}"><input type="image" src="/assets/img/thumbsUP.jpg" height="80px" width="60px" alt="Submit"></a>
                        <a href="suggestions/dislike/{{this.id}}"><input type="image" src="/assets/img/thumbsDOWN.png" height="100px" width="100px"  alt="Submit"></a>
                    </div>
                    </div>
                </div>
                 {{/each}} 
			</div>

		</div>
	</div>